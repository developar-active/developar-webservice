<%
   locals.PAGE_ID = 'about';

   locals.PAGE_DESCRIPTION = "Our expertise is making things even better for everyone. See our background, company principles, our core mission, and philosophy, and meet our team members.";
   locals.PAGE_KEYWORDS = [
      'Developar About',
      'How Developar',
      'About Developar',
      'Developar Principles',
      'Developar Mission',
      'Developar Philosophy'
   ];
%>

<style type="text/css">
   main section#about #our-background {
      padding-top: 2em;
      background-color: #EEE;
   }

   main section#about #our-background .content {
      display: grid;
      margin: auto;
      width: 65%;
      padding-top: 12px;
      padding-bottom: 12px;
      align-items: center;
      grid-template-columns: 1fr 1fr;
   }
   main section#about #our-background .content .image img {
      width: 70%;
      display: block;
      margin-left: auto;
      margin-right: auto;
   }
   main section#about #our-background .content {
      font-size: 1.1em;
   }
   @media screen and (max-width: 767px) {
      main section#about #our-background .content {
         width: 80%;
         grid-template-columns: 1fr;
      }
   }
   
   main section#about #our-principles {
      padding-top: 2em;
      padding-bottom: 2em;
   }
   main section#about #our-principles .content .principles {
      display: grid;
      padding: 1.5em 1em;
      grid-column-gap: 1em;
      grid-template-columns: 1fr 1fr 1fr;
      cursor: default;
   }
   main section#about #our-principles .content .principles .principle {
      border-color: transparent;
   }
   main section#about #our-principles .content .principles .principle .thumb {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 12em;
   }
   main section#about #our-principles .content .principles .principle .thumb img {
      vertical-align: middle;
      width: 12em;
   }
   main section#about #our-principles .content .principles .principle .caption {
      min-height: 2.5em;
      border-bottom-left-radius: inherit;
      border-bottom-right-radius: inherit;
   }
   @media screen and (max-width: 767px) {
      main section#about #our-principles .content .principles {
         grid-template-columns: 1fr;
      }
      main section#about #our-principles .content .principles .principle {
         width: 80%;
         margin-left: auto;
         margin-right: auto;
         margin-top: 8px;
         margin-bottom: 8px;
         border-radius: 8px;
         border: 1px solid #DDD;
      }
   }

   main section#about #inspiration-notes {
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
      padding-left: 4em;
      padding-right: 4em;
      padding-top: 4em;
      padding-bottom: 4em;
      background-color: var(--green);
   }
   main section#about #inspiration-notes .note {
      width: 24em;
   }
   main section#about #inspiration-notes .note h3,
   main section#about #inspiration-notes .note p {
      color: var(--pcolor-fr);
   }
   @media screen and (max-width: 767px) {
      main section#about #inspiration-notes {
         padding-left: 12px;
         padding-right: 12px;
         padding-top: 2em;
         padding-bottom: 2em;
         flex-direction: column;
      }
      main section#about #inspiration-notes .note {
         width: auto;
         padding-top: 12px;
         padding-bottom: 12px;
      }
   }

   main section#about #creative-quote {
      position: relative;
   }
   main section#about #creative-quote .thumb img {
      width: 100%;
   }
   main section#about #creative-quote .caption {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      right: 0em;
      top: 0em;
      bottom: 0;
      padding: 1.4em;
      max-width: 32em;
      background-color: rgba(255, 255, 255, 0.6);
   }
   @media screen and (max-width: 767px) {
      main section#about #creative-quote {
         height: 20em;
      }
      main section#about #creative-quote .caption {
         padding: 12px;
      }
      main section#about #creative-quote .thumb {
         height: 100%;
      }
      main section#about #creative-quote .thumb img {
         height: inherit;
      }
   }

   main section#about #team-ref {
      position: relative;
      background-image: url(https://static.developar.in/images/our-team-work-1861x407-44kb.jpg);
      background-position-y: 50%;
   }
   main section#about #team-ref .content {
      padding-top: 2.8em;
      padding-bottom: 2.8em;
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: rgba(0, 0, 0, 0.75);
      color: #FFF;
      background-origin: border-box;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
   }
   main section#about #team-ref .content a {
      color: var(--pcolor-light);
   }
   main section#about #team-ref .content a:hover {
      color: var(--pcolor);
   }
   main section#about #team-ref .content svg {
      width: 1em;
      height: 1em;
      vertical-align: middle;
   }
   @media screen and (max-width: 767px) {
      main section#about #team-ref .content {
         padding-left: 12px;
         padding-right: 12px;
      }
   }
</style>

