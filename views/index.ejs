<%
   locals.PAGE_ID = 'home';

   locals.PAGE_KEYWORDS = [
      "Web development",
      "Web development company",
      "Web development near me",
      "Webite development company",
      "Website development",
      "Web design",
      "Responsive website",
      "Digital marketing",
      "Digital marketing near me",
      "Software development",
      "Software development company",
      "Mobile app development",
      "Mobile app development company",
      "Mobile application development",
      "Mobile application development company",
      "iOS development",
      "Android development",
      "Web development service",
      "Developar Home", 
      "Get started"
   ];
%>

<style type="text/css">
   main #init-step {
      display: flex;
      height: 60vh;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 15;
   }

   main #init-step .wrapper.content {
      max-width: 30em;
   }

   main #init-step .wrapper.content .actions {
      display: flex;
      padding: 1em 0;
      justify-content: center;
   }

   main #init-step .wrapper.content h1,
   main #init-step .wrapper.content p {
      color: #FFF;
   }

   main #init-step .wrapper.content h1 {
      font-size: 3.4rem;
   }

   /* For tablets */
   @media screen and (max-width: 1024px) {
      main #init-step {
         height: 35vh;
         flex-direction: column;
      }

      main #init-step .wrapper.content {
         max-width: auto;
         padding: 1em 2em;
      }

      main #init-step .wrapper.content h1 {
         font-size: 2.4em;
      }
   }

   @media screen and (min-width: 768px) and (max-width: 1023px) {
      main #init-step {
         height: 50vh;
      }
   }

   @media screen and (max-width: 767px) {
      main #init-step {
         height: 70vh;
      }
   }


   main #get-started {
      display: flex;
      margin-top: 14em;
      height: 60vh;
      flex-direction: row;
      justify-content: center;
      align-items: center;
   }

   main #get-started .wrapper.image {
      display: flex;
      justify-content: center;
   }

   main #get-started .wrapper.image img {
      width: 26em;
   }

   main #get-started .wrapper.content {
      max-width: 30em;
      padding: 2em 3em;
   }

   main #get-started .wrapper.content h1 {
      font-size: 3.4rem;
   }

   @media screen and (max-width: 1024px) {
      main #get-started {
         height: 40vh;
      }
      main #get-started .wrapper.content {
         padding: 1em;
      }
   }

   /* For smartphones */
   @media screen and (max-width: 767px) {
      main #get-started {
         height: 90vh;
         flex-direction: column;
      }

      main #get-started .wrapper.image img {
         width: 16em;
         height: auto;
      }

      main #get-started .wrapper.content {
         max-width: auto;
         padding: 1em;
      }

      main #get-started .wrapper.content h1 {
         font-size: 2.4rem;
      }
   }
   @media screen and (max-width: 400px) {
      main #get-started {
         height: auto;
      }
   }

   main #third-step {
      display: flex;
      height: 60vh;
      flex-direction: row-reverse;
      justify-content: center;
      align-items: center;
      background-color: #EEE;
   }

   main #third-step .wrapper.image {
      display: flex;
      justify-content: center;
   }

   main #third-step .wrapper.image img {
      width: 26em;
   }

   main #third-step .wrapper.content {
      max-width: 30em;
      padding: 2em 3em;
   }

   main #third-step .wrapper.content h1 {
      font-size: 3.4rem;
   }

   @media screen and (max-width: 1024px) {
      main #third-step {
         height: 35vh;
      }
      main #third-step .wrapper.content {
         padding: 1em;
      }
   }

   /* For smartphones */
   @media screen and (max-width: 767px) {
      main #third-step {
         height: 80vh;
         flex-direction: column;
      }

      main #third-step .wrapper.image img {
         width: 16em;
         height: auto;
      }

      main #third-step .wrapper.content {
         max-width: auto;
         padding: 1em;
      }

      main #third-step .wrapper.content h1 {
         font-size: 2.4rem;
      }

      @media (orientation: landscape) {
         main #get-started {
            height: 120vh;
         }

         main #third-step {
            height: 100vh;
         }
      }
   }

   main #developing-process {
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 360px;
      background-image: linear-gradient(to right, var(--pcolor), var(--pcolor-dark));
      color: var(--pcolor-fr);
   }
   main #developing-process header {
      text-align: center;
   }
   main #developing-process .process-steps {
      padding-top: 2em;
      padding-bottom: 1em;
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      margin-left: auto;
      margin-right: auto;
   }
   main #developing-process .process-steps .step {
      padding: 12px 1em;
      border-radius: 8px;
      text-align: center;
   }
   main #developing-process .process-steps .thumb {
      padding: 1em;
      text-align: center;
   }
   main #developing-process .process-steps .thumb svg {
      width: 3em;
      height: 3em;
   }

   @media screen and (max-width: 1024px) {
      main #developing-process {
         height: auto;
      }
      main #developing-process header {
         padding-top: 2em;
      }
      main #developing-process .process-steps {
         grid-template-columns: repeat(2, 1fr);
      }
   }

   main #suggest-subscribe {
      display: flex;
      flex-direction: column;
      height: 280px;
      justify-content: center;
      align-items: center;
      text-align: center;
   }
   
   main #suggest-subscribe header {
      padding-left: 2em;
      padding-right: 2em;
   }

   main #suggest-subscribe .form-container {
      padding-top: 1.2em;
      padding-bottom: 1.2em;
   }
   
   @media screen and (max-width: 767px) {
      main #suggest-subscribe {
         height: auto;
      }
      main #suggest-subscribe header {
         padding-top: 2em;
      }
   }

   @media screen and (max-width: 400px) {
      /* Make scallable */
      main #suggest-subscribe .form-container input.controller {
         min-width: 9em;
      }
   }

</style>

<%- include('partials/_header', { raised: false }) %>

<%- include('partials/_curve_bg', { className: 'home' }) %>

<main>
   <!-- Initial section -->
   <div id="init-step">
      <div class="wrapper content" data-aos="zoom-in">
         <h1>We make more<br /><span>discoverable</span> web</h1>
         <p>The Clients of Developar have liked the services very much if you also want to take advantage of it,
            Develop your product now</p>
         <div class="actions">
            <a type="button" class="icon white" href="#get-started"><i data-feather="chevron-down"></i></a>
         </div>
      </div>
   </div>

   <div id="get-started">
      <div class="wrapper image" data-aos="fade-up" data-aos-delay="60">
         <img src="https://static.developar.in/images/emails-600x600-61kb.png" height="auto" alt="Doing great things for you" />
      </div>
      <div class="wrapper content" data-aos="fade-up" data-aos-delay="80">
         <h1>Doing great things for you</h1>
         <p>The Developar and the team will do their best for you to reach the heights of success</p>
         <br />
         <div class="scalable-x">
            <a href="http://developar.in/pricing" type="button" class="icon-button outline">
               <span class="label">Dive in pricing</span>
               <span class="ic"><i data-feather="chevron-right"></i></span>
            </a>
         </div>
      </div>
   </div>

   <div id="third-step" data-aos="fade-up">
      <div class="wrapper image">
         <img src="https://static.developar.in/images/workflow-627x585-24kb.png" height="auto" alt="Experts in marketing" />
      </div>
      <div class="wrapper content">
         <h1>Experts in marketing</h1>
         <p>We extend your product's boundary that people can easily reach out to your service.</p>
      </div>
   </div>

   <div id="developing-process" data-aos="fade-up">
      <header>
         <h2>Developing Process</h2>
         <h6>FOLLOWING LESS, PRODUCING MORE</h6>
      </header>
      <div class="process-steps">
         <div class="step">
            <div class="step-name">
               <div class="thumb">
                  <i data-feather="check-circle"></i>
               </div>
               <h5>1. Getting requirements</h5>
            </div>
         </div>

         <div class="step">
            <div class="step-name">
               <div class="thumb">
                  <i data-feather="search"></i>
               </div>
               <h5>2. Analyze problem</h5>
            </div>
         </div>

         <div class="step">
            <div class="step-name">
               <div class="thumb">
                  <i data-feather="code"></i>
               </div>
               <h5>3. Writing code</h5>
            </div>
         </div>

         <div class="step">
            <div class="step-name">
               <div class="thumb">
                  <i data-feather="activity"></i>
               </div>
               <h5>4. Testing</h5>
            </div>
         </div>

         <div class="step">
            <div class="step-name">
               <div class="thumb">
                  <i data-feather="upload-cloud"></i>
               </div>
               <h5>5. Deploy</h5>
            </div>
         </div>
      </div>

   </div>

   <div id="suggest-subscribe" data-aos="fade-up">
      <header>
         <h2>Stay up to date with our news</h2>
         <p>Subscribe your email below to keep updated.</p>
      </header>
      <div class="form-container" data-aos="fade-up">
         <%- include('partials/_newsletter', { NO_LABEL: true }); %>
      </div>
   </div>
</main>

<%- include('partials/_footer', { DISABLE_NEWSLETTER: true }) %>