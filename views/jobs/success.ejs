<style type="text/css">
	main {
		height: 80vh;
	}
	main section#success-apply {
		height: inherit;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	main section#success-apply .hero-image {
		padding-bottom: 2em;
	}
	main section#success-apply .hero-image img {
		display: block;
		width: 32em;
		margin-left: auto;
		margin-right: auto;
	}
</style>

<%- include('../partials/_page_duration_progress', { duration: '5000ms' }); %>

<main id="success-apply-container">
	<section id="success-apply">
		<div class="hero-image">
			<img src="https://developarcdn.vercel.app/images/apply-job-727x436-70kb.png" alt="Submission success" />
		</div>
		<header>
			<h2>Thanks <span class="text-blur">for trying to join with Developar</span></h2>
			<p>You will soon become a member of the developar.</p>
			<p><a class="hoverable focused" tabindex="1" href="/">Back to homepage</a></p>
		</header>
	</section>
</main>

<script type="application/javascript">
	document.addEventListener('DOMContentLoaded', function () {
		const key = 'JOB_SUBMISSION';
		function leavePage () {
			window.location.href = '/';
		}

		if (localStorage.getItem(key)) {
			localStorage.removeItem(key);
			setTimeout(leavePage, 5000);
		}
		else {
			leavePage();
		}
	})
</script>