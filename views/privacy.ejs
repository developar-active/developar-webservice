<style type="text/css">
   main section#privacy-note {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
   }

   main section#privacy-note .wrapper.content {
      padding: 2em 0;
      width: 60%;
   }

   main section#privacy-note .wrapper.content .note-block {
      padding: 1.4em 0;
   }

   main section#privacy-note .wrapper.content .note-block h3 {
      color: #444;
   }

   @media screen and (max-width: 767px) {
      main section#privacy-note .wrapper.content {
         width: 90%;
      }
   }
